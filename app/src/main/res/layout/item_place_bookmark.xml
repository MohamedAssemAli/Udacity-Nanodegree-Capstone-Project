<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_size_small"
    android:layout_marginEnd="@dimen/margin_padding_size_medium"
    android:layout_marginStart="@dimen/margin_padding_size_medium"
    android:layout_marginTop="@dimen/margin_padding_size_small"
    android:padding="@dimen/margin_padding_size_small"
    app:cardCornerRadius="@dimen/text_size_micro">

    <LinearLayout
        android:id="@+id/item_place_bookmark_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_place_bookmark_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/pin"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_padding_size_micro"
            android:layout_weight="8"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_size_micro">

            <TextView
                android:id="@+id/item_place_bookmark_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_place_bookmark_lat_lan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_place_bookmark_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_forever_red_700_24dp"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
