<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_marginTop">@dimen/margin_padding_size_micro</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_micro</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_medium</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_micro</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_marginStart">@dimen/margin_padding_size_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_medium</item>
        <item name="android:paddingStart">@dimen/margin_padding_size_medium</item>
        <item name="android:paddingEnd">@dimen/margin_padding_size_medium</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_small</item>
        <item name="android:drawablePadding">@dimen/margin_padding_size_small</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/edit_text_bg_2</item>
        <item name="android:paddingStart">@dimen/margin_padding_size_small</item>
        <item name="android:paddingEnd">@dimen/margin_padding_size_small</item>
        <item name="android:paddingBottom">@dimen/margin_padding_size_micro</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_small</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/exo_regular</item>
    </style>

    <style name="ReplyTextVIew">
        <item name="android:paddingStart">@dimen/margin_padding_size_small</item>
        <item name="android:paddingEnd">@dimen/margin_padding_size_small</item>
        <item name="android:paddingBottom">@dimen/margin_padding_size_micro</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>
